<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

     <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue" >

        <com.online.market.view.InterceptTouchReletiveLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/system_window_title_high"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:paddingLeft="@dimen/title_padding_left_right"
            android:paddingRight="@dimen/title_padding_left_right" >

            <Button
                android:id="@+id/button_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent_all"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp" />

           <!--  <org.markettool.opera.view.ScaleImageView
                android:id="@+id/arrow_si"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@+id/button_middle"
                android:visibility="gone" /> -->

            <ImageView
                android:id="@+id/redPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_middle"
                android:layout_toLeftOf="@+id/button_middle"
                android:background="@drawable/red_point"
                android:visibility="gone" />
        </com.online.market.view.InterceptTouchReletiveLayout>

        <com.online.market.view.InterceptTouchReletiveLayout
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/system_window_title_high"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/title_padding_left_right"
            android:paddingRight="@dimen/title_padding_left_right" >

            <Button
                android:id="@+id/button_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent_all"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_3"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />
        </com.online.market.view.InterceptTouchReletiveLayout>

        <com.online.market.view.InterceptTouchReletiveLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/system_window_title_high"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/title_padding_left_right"
            android:paddingRight="0dp" >

            <Button
                android:id="@+id/button_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent_all"
                android:ellipsize="end"
                android:maxLength="5"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />
        </com.online.market.view.InterceptTouchReletiveLayout>

        <Button
            android:id="@+id/btn_current_journey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right"
            android:background="@drawable/btn_red_bg_round_corner_selector"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/title_split"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c8c8c8" /> 

</LinearLayout>