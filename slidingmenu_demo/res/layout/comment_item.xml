    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp" >

    <!-- <LinearLayout
        android:id="@+id/left"
        android:layout_width="48dp"
        android:layout_height="48dp"
