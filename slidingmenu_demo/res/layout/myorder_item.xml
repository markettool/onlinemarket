<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/common_entry_item_bg"
    android:padding="10dp" >
    
    <TextView
            android:id="@+id/orderdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="0dp"
            android:text="xxxxxxxxxxxxxx"
            android:textColor="@color/ble_blue" />
    
    <TextView
            android:id="@+id/ordername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="收货人：小小" 
            android:layout_below="@+id/orderdetail"
            android:layout_marginTop="10dp"/>
    
    <TextView
            android:id="@+id/orderaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="收货地址：太原" 
            android:layout_below="@+id/ordername"
            android:layout_marginTop="10dp"/>
    
     <TextView
            android:id="@+id/orderphonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="手机号:15811490155" 
            android:layout_alignParentRight="true"
            android:layout_below="@+id/orderdetail"
            android:layout_marginTop="10dp"/>
     
     <TextView
            android:id="@+id/orderstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="配送中..." 
            android:layout_alignParentRight="true"
            android:textColor="@color/orange"
            android:layout_below="@+id/orderaddress"
            android:layout_marginTop="10dp"/>
     
     <TextView
            android:id="@+id/orderdelivetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="预计送达时间" 
            android:layout_alignParentRight="true"
            android:textColor="@color/text_gray"
            android:layout_below="@+id/orderstatus"
            android:layout_marginTop="10dp"/>
     
     
     <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_downarrow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:id="@+id/iv_menu"
       />
     
</RelativeLayout>